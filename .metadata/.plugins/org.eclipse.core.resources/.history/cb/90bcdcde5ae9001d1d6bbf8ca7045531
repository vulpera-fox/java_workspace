package coding;

import java.util.ArrayList;
import java.util.List;


class Solution {
    public int[] solution(int[] arr) {
        List<Integer> list = new ArrayList<>();
        
        for ( int i = 0; i < arr.length; i++ ) {
        	for ( int j = 0; j < arr[i]; j++ ) {
        		list.add(arr[i]);
        	}
        }
        System.out.println(list.toArray().toString());
        
        
        return null;
    }
}